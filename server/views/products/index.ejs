<%- include("../partials/header"); -%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="font-weight-bold text-center">Welcome to Tunisia-camping</h1>
            <p class="text-center">
                view our hand-picked campgrounds from all over Tunisia!<br>
                If you're favourite campground is not picked yet, you can add it yourself
            </p>
            <p class="text-center">
                <a class="btn btn-primary btn-large" href="/products/new">Add a new product</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular products</h3>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% products.forEach((product)=>{ %>
            <div class="col-md-3 col-sm-6">
                <img id="campgrounds-image" class="img-thumbnail img-fluid" src="<%= product.image %>" alt="a ground image">
                <% if(product.state){ %> 
                    <img src="icons/new-product.png" style="position: absolute; top: 8px; right: 30px">
                <% } %> 
                <% if (product.sell){ %> 
                    <img src="icons/selling.png" style="position: absolute; top: 8px; left: 30px">
                <% }else{ %> 
                    <img src="icons/rent.png" style="position: absolute; top: 8px; left: 30px">
                <% } %> 
                <div class="caption">
                    <h4><%= product.name.substring(0, 16) %>...</h4>
                </div>
                <p>
                    <a href="/products/<%= product._id %>" class="btn btn-primary">More info</a>
                </p>
            </div>
        <% }) %>
    </div>
</div>

<%- include("../partials/footer"); -%>