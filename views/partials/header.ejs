<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/stylesheets/main.css">

    <!-- Custom JS -->
    <script src="/scripts/campground.js"></script>

    <title>Welcome to Tunisia-Camping</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Tunisia-camping</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="container">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active mr-3">
              <a class="nav-link" href="/campgrounds">Campgrounds <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active mr-3">
              <a class="nav-link" href="/campgrounds">Community</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/products">Shop</a>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
          <ul class="navbar-nav navbar-right ml-5">
            <% if(!currentUser){ %>
              <li class="nav-item ml-5"><a class="nav-link" href="/login">login</a></li>
              <li class="nav-item ml-4"><a class="nav-link" href="/register">Sign up</a></li>
            <% }else{ %>
              <div class="nav-item">
                <div class="dropdown">
                  <a class="btn dropdown-toggle nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="<%= currentUser.userImage %>" id="user-image" class="rounded-circle"> 
                    <%= currentUser.firstname %> 
                    <%= currentUser.lastname.toUpperCase() %> 
                  </a>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="/logout">logout</a>
                  </div>
                </div>
              </div>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if(error && error.length > 0){ %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>
      <% if(success && success.length > 0){ %>
        <div class="alert alert-success">
          <%= success %>
        </div>
      <% } %>
    </div>