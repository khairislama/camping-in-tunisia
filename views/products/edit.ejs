<%- include("../partials/header"); -%>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align: center;">Create a new Product</h1>
            <div style="width:30%; margin: 25px auto;">
                <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= product.name %>" name="product[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= product.image %>" name="product[image]">
                    </div>                    
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= product.location %>" name="product[location]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= product.description %>" name="product[description]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" value="<%= product.price %>" name="product[price]" min="0.01" step="0.01">
                    </div>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="newItemCheckbox" name="state"
                        <% if (product.state){ %> 
                            checked>
                        <% }else{ %>
                            >
                        <% } %>  
                        <label class="custom-control-label" for="newItemCheckbox"> New product</label>
                    </div>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="rentItemCheckbox" name="rent"
                        <% if (product.sell){ %> 
                            >
                        <% }else{ %> 
                            checked>
                        <% } %> 
                        <label class="custom-control-label checked" for="rentItemCheckbox"> Rent product</label>
                    </div>     
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/products">Go back</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer"); -%>