<%- include("../partials/header"); -%>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align: center;">Create a new Product</h1>
            <div style="width:30%; margin: 25px auto;">
                <form action="/products" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="name" name="product[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="image url" name="product[image]">
                    </div>                    
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="location" name="product[location]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="description" name="product[description]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="price" name="product[price]" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/products">Go back</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer"); -%>