<%- include("../partials/header"); -%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Tunisia-camping</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img src="<%= product.image %>" alt="the product image" class="img-fluid">                
                <div class="caption-full">
                    <h4 class="float-right">TND <%= product.price %>/night</h4>
                    <h4 class="text-monospace"><a href="#"><%= product.name %></a></h4>
                    <p><%= product.description %></p>
                    <p class="font-italic">
                        Submitted by <%= product.author.firstname %> <%= product.author.lastname %>
                        <br><span class="text-muted">Created at: <%= product.created.toDateString() %></span>
                    </p>
                    <p> new : <%= product.state %>  - vente: <%= product.sell %> </p>
                    <% if(currentUser && product.author.id.equals(currentUser._id)){ %>
                        <a href="/products/<%= product._id %>/edit" class="btn btn-warning">Edit</a>
                        <form class="delete-form" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer"); -%>